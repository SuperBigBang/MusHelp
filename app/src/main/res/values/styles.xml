<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorCursor</item>
        <item name="android:alertDialogTheme">@style/Theme.AppCompat.NoActionBar</item>

        <item name="backGroundColor">@color/colorPrimary</item>
        <item name="selectedTextColor">@color/colorPrimaryWhite</item>
        <item name="UNselectedTextColor">@color/colorPrimaryWhite</item>
        <item name="OtherTextColor">@color/colorPrimaryWhite</item>
        <item name="seekBarDotColor">@color/colorPrimaryBlue</item>
        <item name="seekBarProgressColor">@color/colorPrimaryBlue</item>
        <item name="seekBarBackgroundProgressColor">@color/colorPrimaryWhite</item>
        <item name="lines_color">@color/cornerColor</item>
        <item name="BuyOkButton">@color/BuyOkButtonDark</item>
        <item name="UnavailableObj">@color/md_grey_500</item>
    </style>


    <style name="Theme_1" parent="@style/AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorCursor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:alertDialogTheme">@style/Theme.AppCompat.NoActionBar</item>

        <item name="backGroundColor">@color/colorPrimaryDark</item>
        <item name="selectedTextColor">@color/colorPrimaryWhite</item>
        <item name="UNselectedTextColor">@color/cornerColor</item>
        <item name="OtherTextColor">@color/colorPrimaryWhite</item>
        <item name="seekBarDotColor">@color/colorPrimaryBlue</item>
        <item name="seekBarProgressColor">@color/colorPrimaryBlue</item>
        <item name="seekBarBackgroundProgressColor">@color/colorPrimaryWhite</item>
        <item name="lines_color">@color/cornerColor</item>
        <item name="BuyOkButton">@color/BuyOkButtonDark</item>
        <item name="UnavailableObj">@color/md_grey_500</item>
    </style>

    <style name="Theme_2" parent="@style/AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimartWhiteDarkBlueTheme</item>
        <item name="colorAccent">@color/colorPrimartWhiteDarkBlueTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_state_darkBlue_blue</item>
        <item name="android:alertDialogTheme">@style/Theme.AppCompat.NoActionBar</item>

        <item name="backGroundColor">@color/colorPrimaryDarkBlueBackground</item>
        <item name="selectedTextColor">@color/colorPrimartWhiteDarkBlueTheme</item>
        <item name="UNselectedTextColor">@color/cornerColorDarkBlueTheme</item>
        <item name="OtherTextColor">@color/colorPrimartWhiteDarkBlueTheme</item>
        <item name="seekBarDotColor">@color/cornerColorDarkBlueTheme</item>
        <item name="seekBarProgressColor">@color/cornerColorDarkBlueTheme</item>
        <item name="seekBarBackgroundProgressColor">@color/colorPrimartWhiteDarkBlueTheme</item>
        <item name="lines_color">@color/cornerColorDarkBlueTheme</item>
        <item name="BuyOkButton">@color/BuyOkButtonDark</item>
        <item name="UnavailableObj">@color/md_grey_500</item>
    </style>

    <style name="Theme_3" parent="@style/AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryWhite</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_state_white_blue</item>
        <item name="android:alertDialogTheme">@style/Theme.AppCompat.NoActionBar</item>

        <item name="backGroundColor">@color/colorPrimaryWhiteBackground</item>
        <item name="selectedTextColor">@color/colorPrimary</item>
        <item name="UNselectedTextColor">@color/colorPrimaryDark_state_white_blue</item>
        <item name="OtherTextColor">@color/colorPrimary</item>
        <item name="seekBarDotColor">@color/colorPrimaryDark_state_white_blue</item>
        <item name="seekBarProgressColor">@color/colorPrimaryDark_state_white_blue</item>
        <item name="seekBarBackgroundProgressColor">@color/md_grey_500</item>
        <item name="lines_color">@color/colorPrimaryDark_state_white_blue</item>
        <item name="BuyOkButton">@color/md_green_400</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <item name="trackTint" tools:ignore="PrivateResource">@color/cardview_light_background
        </item>
        <!-- Неактивное состояние -->
        <item name="colorSwitchThumbNormal">@color/uncheckColor</item>
        <!-- Активное состояние -->
        <item name="colorControlActivated">@color/cornerColorDarkBlueTheme</item>
    </style>

    <style name="SeekBarColor" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorPrimaryDark_state_white_blue</item>
    </style>

    <attr name="backGroundColor" format="reference|color" />
    <attr name="selectedTextColor" format="reference|color" />
    <attr name="UNselectedTextColor" format="reference|color" />
    <attr name="OtherTextColor" format="reference|color" />
    <attr name="seekBarDotColor" format="reference|color" />
    <attr name="seekBarProgressColor" format="reference|color" />
    <attr name="seekBarBackgroundProgressColor" format="reference|color" />
    <attr name="lines_color" format="reference|color" />
    <attr name="BuyOkButton" format="reference|color" />
    <attr name="UnavailableObj" format="reference|color" />
</resources>
